<?xml version="1.0" encoding="UTF-8"?>
<Context>
  <!-- Resource for the application to obtain DB connections via JNDI -->
  <Resource name="jdbc/ubicomp"
            auth="Container"
            type="javax.sql.DataSource"
            driverClassName="org.postgresql.Driver"
            url="jdbc:postgresql://ubicomp_db:5432/ubicomp"
            username="ubicomp_user"
            password="ubicomp123"
            maxActive="20"
            maxIdle="10"
            maxWait="10000"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"/>
</Context>
